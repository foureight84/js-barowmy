extends layout

block body
  .jumbotron.text-center
    h1 Barowmy
    p Rental Directory
    form.form-inline
      .form-group
        input.form-control(type="text" placeholder="What are you looking to rent?" disabled="true" style="width: 250px")
        input.form-control(type="text" placeholder="Where?" disabled="true")
        input.form-control(type="submit" disabled="true")
  .container-fluid.text-center
    .row
      .col-sm-4
        h2 Tags
        ul.list-unstyled
          each tag in tags
            li
              a(href="/tag/#{tag.name}")=toTitleCase(tag.name)
      .col-sm-4
        h2 Cities
        ul.list-unstyled
          each location in locations
            li
              a(href="/city/#{location.name}")=toTitleCase(location.name)
      .col-sm-4
        h2 Vendors
        ul.list-unstyled
          each vendor in vendors
            li
              a(href="/vendor/#{vendor.name}")=toTitleCase(vendor.name)