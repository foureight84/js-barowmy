extends layout

block body
  .jumbotron.text-center
    h1 Barowmy
    p Rental Directory
  .container-fluid.text-center
    .row
      .col-sm-4
        h2 Tags
      .col-sm-4
        h2 Cities
      .col-sm-4
        h2 Vendors
    .row
      .col-sm-4
        ul.list-unstyled
          each tag in tags
            li
              a(href="/tag/#{tag.name}")=tag.name
      .col-sm-4
        ul.list-unstyled
          each location in locations
            li
              a(href="/city/#{location.name}")=location.name
      .col-sm-4
        ul.list-unstyled
          each vendor in vendors
            li
              a(href="/vendor/#{vendor.name}")=vendor.name

